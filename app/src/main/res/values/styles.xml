<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">#292727</item>
        <item name="colorPrimaryVariant">#292727</item>
        <item name="colorOnPrimary">#292727</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#292727</item>
        <item name="colorSecondaryVariant">#292727</item>
        <item name="colorOnSecondary">#292727</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:displayOptions">showHome</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="NavigationViewTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorBackground">#5E5C5C</item>
        <item name="android:itemBackground">#292727</item>
        <item name="itemTextColor">@color/white</item>
        <item name="colorControlHighlight">#FFCA0707</item>
    </style>

    <style name="ToolbarViewTheme" parent="Widget.Design.NavigationView">
        <item name="android:textColorSecondary">@color/my_color</item>
        <item name="android:colorBackground">#292727</item>
        <item name="android:itemBackground">#292727</item>
        <item name="itemTextColor">@color/my_color</item>
        <item name="android:textColorPrimary">@color/my_color</item>
    </style>

</resources>